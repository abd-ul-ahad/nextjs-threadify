{
  "name": "nextjs-threadify",
  "version": "3.1.0",
  "description": "Threading/multitasking utilities for Next.js",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup index.ts --format cjs,esm --dts",
    "lint": "eslint src/**/*.ts --ext .ts",
    "lint:fix": "eslint src/**/*.ts --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abd-ul-ahad/nextjs-threadify.git"
  },
  "bugs": {
    "url": "https://github.com/abd-ul-ahad/nextjs-threadify/issues"
  },
  "homepage": "https://github.com/abd-ul-ahad/nextjs-threadify#readme",
  "keywords": [
    "nextjs",
    "react",
    "threads",
    "multithreading",
    "webworkers",
    "nextjs-library",
    "nextjs-plugin",
    "async",
    "concurrency",
    "parallel",
    "task-runner",
    "scheduler",
    "performance",
    "nextjs-tools",
    "nextjs-utils",
    "javascript",
    "typescript",
    "frontend",
    "optimization",
    "react-hooks",
    "nextjs-hooks"
  ],
  "author": "Abdul Ahad",
  "license": "BSD-2-Clause",
  "peerDependencies": {
    "next": ">=13",
    "react": ">=18"
  },
  "devDependencies": {
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "react": "^19.1.1",
    "tsup": "^8.5.0",
    "typescript": "^5.3.3"
  }
}
